@page "/"
@using Blazored.LocalStorage
@inject ILocalStorageService LocalStorage
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<style>
    body {
        background: url('/mn.jpg') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
        margin: 0;
        overflow: hidden;
    }

    .content-container {
        text-align: center;
        padding: 20px;
        color: white;
        max-width: 600px;
        margin: 0 auto;
    }

    .weather-card {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        margin-bottom: 20px;
        text-align: center;
    }

    .weather-card h3 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .weather-card p {
        font-size: 18px;
        margin: 5px 0;
    }

    .btn-add {
        background-color: #FFD700;
        color: black;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        margin-top: 10px;
        transition: 0.3s;
    }

    .btn-add:hover {
        background-color: #ffcc00;
    }

    .favorite-cities {
        margin-top: 30px;
    }

    .favorite-cities ul {
        list-style-type: none;
        padding: 0;
    }

    .favorite-cities li {
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 6px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }
</style>

<div class="content-container">
    <h1>Weather Information</h1>
    
    <input @bind="cityName" placeholder="Enter city name" class="input-city" />
    <button @onclick="AddCityToFavorites" class="btn-add">Add to Favorites</button>

    <div class="favorite-cities">
        <h3>Your Favorite Cities</h3>
        @if (favoriteCities != null && favoriteCities.Count > 0)
        {
            <ul>
                @foreach (var city in favoriteCities)
                {
                    <li>@city.Name</li>
                }
            </ul>
        }
        else
        {
            <p>No cities added yet.</p>
        }
    </div>
</div>

@code {
    // Define the City class directly here
    public class City
    {
        public string Name { get; set; }
        public string Temperature { get; set; }
        public string WeatherDescription { get; set; }
    }

    private string cityName = string.Empty;
    private List<City> favoriteCities = new();

    protected override async Task OnInitializedAsync()
    {
        favoriteCities = await LocalStorage.GetItemAsync<List<City>>("favorites") ?? new List<City>();
    }

    private async Task AddCityToFavorites()
    {
        if (!string.IsNullOrEmpty(cityName))
        {
            var city = new City { Name = cityName, Temperature = "25°C", WeatherDescription = "Clear sky" };

            favoriteCities.Add(city);
            await LocalStorage.SetItemAsync("favorites", favoriteCities);
        }
    }
}
